{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "lib": ["esnext"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["vscode", "node", "vitest"],
    "outDir": "out",
    "sourceMap": true,
    "rootDir": "." 
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "tsup.config.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "out"
  ]
}